extends ../layouts/layout

block _css
  link(href='css/main.css', rel='stylesheet')

block _content
  .container
    #recommend-novel.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#recommend-novel', data-slide-to='0')
        li(data-target='#recommend-novel', data-slide-to='1')
        li(data-target='#recommend-novel', data-slide-to='2')
      .carousel-inner
        .carousel-item.active
          a(href="#")
            img(src='img/recommend-novel.jpg', alt='slide - 0')
            .carousel-caption.d-none.d-md-block
              //- h5 하늘에서 내려온 토끼
              //- p 올해를 강타할 #힐링 #일상
        .carousel-item
          a(href="#")
            img(src='img/thumb_1.jpg', alt='slide - 1')
        .carousel-item
          a(href="#")
            img(src='img/thumb_2.jpg', alt='slide - 2')
      a.carousel-control-prev(href='#recommend-novel', role='button', data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#recommend-novel', role='button', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
        
